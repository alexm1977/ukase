<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>ukase-ui</artifactId>
    <packaging>jar</packaging>

    <name>Ukase UI</name>

    <parent>
        <groupId>com.github.ukase</groupId>
        <artifactId>ukase-parent</artifactId>
        <version>7.0</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <version>1.11.0</version>
                <configuration>
                    <installDirectory>${user.home}/.m2/node</installDirectory>
                    <nodeVersion>v14.15.4</nodeVersion>
                    <npmVersion>6.14.10</npmVersion>
                </configuration>
                <executions>
                    <execution>
                        <id>node-npm-install-for-build</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>dependencies-install</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>build</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>run build</arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>node-npm-install-for-clean</id>
                        <phase>pre-clean</phase>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>install-rimraf-for-clean</id>
                        <phase>pre-clean</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install -g rimraf</arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>do-clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>run clean</arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <targetPath>static</targetPath>
                <directory>${basedir}/target/dist</directory>
            </resource>
        </resources>
    </build>
</project>
